generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model School {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name String @unique
  email String?
  logo String?
  address String
  createdAt   DateTime     @default(now())
  schoolyears Schoolyear[]
  admins Admin[]
  // auths Auth[]
  users AuthSchool[]
  teachers Teacher[]
}

model Schoolyear {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt   DateTime     @default(now())
  endedAt   DateTime?     
  schoolId String @db.Uuid
  school      School       @relation(fields: [schoolId], references: [id])
  classYears ClassYear[]
  semestres Semestre[]
  studentFees StudentFees[]
  activate Boolean? @default(false)
}

model Admin {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username String
  email String @unique
  schoolId String @db.Uuid
  school      School       @relation(fields: [schoolId], references: [id])
  deleted Boolean @default(false)
}

model Student {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username    String       @unique
  email       String?      @unique
  phone       String?      @unique
  address     String
  img         String?
  bloodType   String
  sex         UserSex
  createdAt   DateTime     @default(now())
  parentId    String @db.Uuid
  parent      Parent       @relation(fields: [parentId], references: [id])
  gradeId     Int
  attendances Attendance[]
  results     Result[]
  birthday    DateTime
  classYears ClassYear[]
  studentFees StudentFees[]
  currentClassId String @db.Uuid
  currentClass      Class       @relation(fields: [currentClassId], references: [id])
  deleted Boolean @default(false)
  
}

model Auth {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  password String @unique
  email String  @unique 
  //  school      School?       @relation(fields: [schoolId], references: [id])
  // schoolId String? @db.Uuid
  schools AuthSchool[]
}

model AuthSchool {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  school      School?       @relation(fields: [schoolId], references: [id])
  user      Auth?       @relation(fields: [userId], references: [id])
  role String
  schoolId String @db.Uuid
  userId String @db.Uuid
}
model ClassYear {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  schoolYearId String @db.Uuid
  classId String @db.Uuid
  studentId String @db.Uuid
  schoolYear       Schoolyear        @relation(fields: [schoolYearId], references: [id])
  class       Class        @relation(fields: [classId], references: [id])
  student       Student        @relation(fields: [studentId], references: [id])
  isSolded Boolean @default(false)
  paid BigInt @default(0)
  // cette table servira pour les historiques, en une année précise on pourra savoir tel élève fréquentait tel année 
}

model Teacher {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username  String
  email     String?   @unique
  phone     String?   @unique
  address   String
  img       String?
  imgKey    String?
  deleted Boolean @default(false)
  sex       UserSex
  schoolId String? @db.Uuid
  school       School?        @relation(fields: [schoolId], references: [id])
  createdAt DateTime  @default(now())
  subjects  Subject[]
  lessons   Lesson[]
  classes   Class[]
}

model Parent {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username  String    @unique
  name      String
  surname   String
  email     String?   @unique
  phone     String    @unique
  address   String
  createdAt DateTime  @default(now())
  students  Student[]
  deleted Boolean @default(false)
}



model Class {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name     String
  supervisorId  String? @db.Uuid
  supervisor    Teacher?       @relation(fields: [supervisorId], references: [id])
  lessons       Lesson[]
  announcements Announcement[]
  classYears ClassYear[]
  fees Fees[]
  currentStudents Student[]
  events EventClass[]
  deleted Boolean @default(false)

}

model Subject {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name     String   
  credit Int @default(1)
  teachers Teacher[]
  lessons  Lesson[]
  exams       Exam[]
  deleted Boolean @default(false)

}

model Lesson {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  day       Day
  credit Int @default(1)
  startTime DateTime
  endTime   DateTime
  subjectId   String @db.Uuid
  subject     Subject      @relation(fields: [subjectId], references: [id])
  classId     String @db.Uuid
  class       Class        @relation(fields: [classId], references: [id])
  teacherId   String @db.Uuid
  teacher     Teacher      @relation(fields: [teacherId], references: [id])
  attendances Attendance[]
  files String[]
  keys String[]
  examens Exam[]
  deleted Boolean @default(false)

}

model Semestre {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  type String
  startTime DateTime
  endTime   DateTime
  schoolYearId String @db.Uuid
  schoolYear     Schoolyear      @relation(fields: [schoolYearId], references: [id])
  examens Exam[]    
  deleted Boolean @default(false)

}
model Exam {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title     String
  startTime DateTime
  endTime   DateTime
  subjectId String @db.Uuid
  files String[]
  keys String[]
  lessonId String @db.Uuid
  lesson Lesson           @relation(fields: [lessonId], references: [id])
  deleted Boolean @default(false)
  
  semestre     Semestre      @relation(fields: [semestreId], references: [id])
  semestreId String @db.Uuid
  subject   Subject   @relation(fields: [subjectId], references: [id])
  results  Result[]
}

model Fees {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  order Int
  classId String @db.Uuid
  class     Class      @relation(fields: [classId], references: [id])
  amount BigInt
  deleted Boolean @default(false)
  studentFees StudentFees[]
}
 model StudentFees {
   id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
   amount BigInt
   studentId String @db.Uuid
   schoolYearId String @db.Uuid
   FeesId String @db.Uuid
   fees     Fees      @relation(fields: [FeesId], references: [id])
   schoolYear     Schoolyear      @relation(fields: [schoolYearId], references: [id])
   student     Student      @relation(fields: [studentId], references: [id])
  deleted Boolean @default(false)

 }

model Result {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  score Int
  examId       String? @db.Uuid
  exam         Exam?       @relation(fields: [examId], references: [id])
  studentId    String @db.Uuid
  deleted Boolean @default(false)
  student      Student     @relation(fields: [studentId], references: [id])
}

model Attendance {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  date    DateTime
  present Boolean
  studentId String @db.Uuid
  deleted Boolean @default(false)
  student   Student @relation(fields: [studentId], references: [id])
  lessonId  String @db.Uuid
  lesson    Lesson  @relation(fields: [lessonId], references: [id])
}

model Event {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String
  description String
  startTime   DateTime

  endTime     DateTime
  deleted Boolean @default(false)
  eventClass EventClass[]
}

model EventClass {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  eventId String @db.Uuid
  classId String @db.Uuid
  event   Event @relation(fields: [eventId], references: [id])
  class   Class @relation(fields: [classId], references: [id])
  deleted Boolean @default(false)

}
model Announcement {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String
  description String
  date        DateTime
  classId String? @db.Uuid
  class   Class? @relation(fields: [classId], references: [id])
  deleted Boolean @default(false)
}

enum UserSex {
  MALE
  FEMALE
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
}